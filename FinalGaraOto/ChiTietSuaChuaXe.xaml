<Window x:Class="FinalGaraOto.ChiTietSuaChuaXe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalGaraOto"
        mc:Ignorable="d"
        Title="ChiTietSuaChuaXe" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
Height="1065" 
Width="1700"
WindowState="Maximized" WindowStyle="None" WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <materialDesign:ColorZone Mode="PrimaryLight" Background="#FF1D2850">
                <DockPanel Height="80">
                    <StackPanel DockPanel.Dock="Right" Background="Transparent" Orientation="Horizontal">
                        <Button x:Name="btnMinimize"
                                Click="btnMinimize_Click"
                                Background="{x:Null}"
                                Content="{materialDesign:PackIcon Kind=MinusCircle}"
                                ToolBar.OverflowMode="AsNeeded"
                                ToolTip="Thoát" Foreground="White" Height="47" BorderBrush="{x:Null}" FontSize="20" />
                        
                        <Button x:Name="btnMaximize"
                                Click="btnMaximize_Click"
                                Background="{x:Null}"
                                Content="{materialDesign:PackIcon Kind=CropSquare}"
                                ToolBar.OverflowMode="AsNeeded"
                                ToolTip="Thu nhỏ" Foreground="White" Height="47" BorderBrush="{x:Null}" />
                        
                        <Button x:Name="btnClosing" 
                                Click="btnClosing_Click"
                                Background="{x:Null}"
                                Content="{materialDesign:PackIcon Kind=CloseCircle}"
                                ToolBar.OverflowMode="AsNeeded"
                                ToolTip="Đóng" Foreground="White" Height="47" BorderBrush="{x:Null}" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="16,0,0,0" VerticalAlignment="Center"
                                   Text="Quản lý gara ô tô" FontSize="50" FontFamily="Cooper Black" Foreground="{DynamicResource MaterialDesignPaper}" />
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>
        </Grid>

        <Grid Grid.Row="1">
            <ToolBarTray Height="60" Background="#FF1B76C6" >
                <ToolBar ClipToBounds="False" Background="#FF1B76C6"
                         Style="{StaticResource MaterialDesignToolBar}" Margin="0,0,-1690,0">
                    <Button x:Name="btnTaiKhoan" 
                            Click="taiKhoan_Tab"
                            ToolTip="Xem thông tin tài khoản cá nhân">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" Width="30" Height="30" Foreground="White" />
                            <TextBlock Text="Tài khoản" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="btnDichVu" 
                            Click="dichVu_Tab"
                            ToolTip="Tiếp nhận sửa chữa xe">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FaceAgent" Width="30" Height="30" Foreground="White" />
                            <TextBlock Text="Dịch vụ" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="btnKhoHang" 
                            Click="khoHang_Tab"
                            ToolTip="Xem vật tư phụ tùng">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Warehouse" Width="30" Height="30" Foreground="White" />
                            <TextBlock Text="Kho hàng" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnThongKe" 
                            Click="thongKe_Tab"
                            ToolTip="Xem thống kê tháng" >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DatabaseClock" Width="30" Height="30" Foreground="White" />
                            <TextBlock Text="Thống kê" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="btnTuyChon" 
                            Click="tuyChon_Tab"
                            ToolTip="Follow me on Twitter">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CogOutline" Width="30" Height="30" Foreground="White" />
                            <TextBlock Text="Tùy chọn" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="btnNhanVien" 
                            Click="nhanVien_Tab"
                            ToolTip="Quản lý nhân viên, chức vụ">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountBoxMultipleOutline" Width="30" Height="30" Foreground="White"/>
                            <TextBlock Text="Nhân viên" FontSize="20" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="483*"/>
                <ColumnDefinition Width="367*"/>
            </Grid.ColumnDefinitions>
            <DockPanel Height="60" Background="#FFA8A8A8" Grid.ColumnSpan="2">
                <TextBlock Margin="16,0,0,0" Text="Chi tiết sửa chữa xe" FontSize="35" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </DockPanel>
        </Grid>

        <Grid Grid.Row="3">
            <Grid>
                <StackPanel Orientation="Horizontal" >
                    <GroupBox Margin="11,20,0,0" Width="380" Height="651" Header="Chi tiết thông tin" 
              BorderBrush="{DynamicResource MaterialDesignColumnHeader}" FontSize="20" VerticalAlignment="Top">
                        <StackPanel Width="455" Height="557" Orientation="Horizontal">
                            <Grid Margin="-50,-30,467,0" Width="127" Height="522" >
                                <materialDesign:PackIcon Kind="Account" Margin="50,28,0,0" Width="40" Height="40"/>
                                <materialDesign:PackIcon Kind="CardTextOutline" Margin="50,98,0,0" Width="40" Height="40"/>
                                <materialDesign:PackIcon Kind="Car" Margin="50,169,0,0" Width="40" Height="40"/>
                                <materialDesign:PackIcon Kind="MapMarkerRadius" Margin="50,0,0,0" Width="40" Height="40" VerticalAlignment="Center"/>
                                <materialDesign:PackIcon Kind="Phone" Margin="50,313,0,0" Width="40" Height="40"/>
                                <materialDesign:PackIcon Kind="CalendarRange" Margin="50,381,0,0" Width="40" Height="40"/>
                            </Grid>
                            <Grid Margin="-500,6,0,0" Height="564" Width="795">
                                <StackPanel Margin="19,0,301,0" >
                                    <TextBox
                        materialDesign:HintAssist.Hint="Tên chủ xe"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="-200,11,0,0" FontSize="20"  Width="300"/>
                                    <TextBox
                        materialDesign:HintAssist.Hint="Biển số xe"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="-200,11,0,0" FontSize="20" Width="300" />
                                    <TextBox
                        materialDesign:HintAssist.Hint="Hiệu xe"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="-200,11,0,0" FontSize="20"  Width="300" />
                                    <TextBox
                        materialDesign:HintAssist.Hint="Địa chỉ"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="-200,11,0,0" FontSize="20"  Width="300" />
                                    <TextBox
                        materialDesign:HintAssist.Hint="Số điện thoại"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="-200,11,0,0" FontSize="20"  Width="300" />
                                    <DatePicker Margin="-200,11,0,0" Width="300"
                                materialDesign:HintAssist.Hint="Ngày tiếp nhận"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" Height="59" FontSize="20" />
                                </StackPanel>
                            </Grid>
                            <Button Content="Sửa thông tin" Background="#FF89BAD2"
                    Margin="-1320,500,0,0" Height="50" Width="206" FontSize="20" BorderBrush="{DynamicResource MaterialDesignPaper}"/>
                        </StackPanel>
                    </GroupBox>
                    <TextBlock Margin="40,650,0,0" TextWrapping="Wrap" Text="Tổng tiền: " FontSize="30" Foreground="#FFE92713" Height="49" Width="171"/>
                    <TextBox TextWrapping="Wrap"  Width="224" Height="35" Margin="0,650,0,0" FontSize="30" Foreground="#FFE92713"/>
                </StackPanel>
                <DataGrid  Margin="428,20,10,298" BorderBrush="Black" FontSize="20" Height="651">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header = "STT" Binding = "{Binding Name}" />
                        <DataGridTextColumn Header = "Nội dung" Binding = "{Binding Title}" />
                        <DataGridCheckBoxColumn Header = "Vật tư" Binding = "{Binding WasReElected}"/>
                        <DataGridComboBoxColumn Header = "Số lượng" SelectedItemBinding = "{Binding Affiliation}"/>
                        <DataGridComboBoxColumn Header = "Đơn giá" SelectedItemBinding = "{Binding Affiliation}"/>
                        <DataGridComboBoxColumn Header = "Loại tiền công" SelectedItemBinding = "{Binding Affiliation}"/>
                        <DataGridComboBoxColumn Header = "Tiền công" SelectedItemBinding = "{Binding Affiliation}"/>
                        <DataGridComboBoxColumn Header = "Thành tiền" SelectedItemBinding = "{Binding Affiliation}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Thêm" Margin="428,706,1172,215" Height="50" Background="#FF89BAD2" Width="100" FontSize="20" BorderBrush="{DynamicResource MaterialDesignPaper}"/>
                <Button Content="Xóa" Margin="593,706,1007,215" Height="50" Background="#FFB73E3A" Width="100" FontSize="20" BorderBrush="{DynamicResource MaterialDesignPaper}"/>
                <Button Content="Sửa" Margin="750,706,830,215" Height="50" Background="#FF1D2850" Width="100" FontSize="20" BorderBrush="{DynamicResource MaterialDesignPaper}"/>
                <Button Content="Thanh toán" Margin="1222,650,198,33" Height="50" Width="180" Background="#FF2D8138" FontSize="20" BorderBrush="{DynamicResource MaterialDesignPaper}" />
                <Button Content="Thoát" Margin="1490,650,10,33" Height="50" Width="100" Background="#FF1D2850" FontSize="18" BorderBrush="{DynamicResource MaterialDesignPaper}"  />
            </Grid>
        </Grid>
    </Grid>
</Window>
